<div class="chat-container" {{ on "mousemove" this.getDownPosition}}>
    <Chatwindow::Header @identity={{this.getIdentity}}/>
    <div class="chat-container-inner">
        <Contacts::Nav @contacts={{this.getContacts}}/>
        <div class="chat-container-inside">
            <Chatwindow::Messagehistory @history = {{this.getHistory}} />
            <Chatwindow::Replybox {{ on 'change' this.setReply}} />
        </div>
    </div>
    
    {{#each this.replydata as |message|}}
      <Popup::Messagebox @message={{message}}/>
    {{/each}}
</div>
